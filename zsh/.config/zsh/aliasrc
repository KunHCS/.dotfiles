# sudo
alias sudo='sudo '

# ls
alias ls='ls -h --color=auto'
alias ll='ls -lF'
alias la='ls -alF'

# grep 
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# confirm before overwriting
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

# disk
alias df='df -h'
alias du='du -h'

# docker
alias dex='docker exec -it ' # exec command in containers
alias dps='docker ps'  # List running Docker containers
alias dpsa='docker ps -a'  # List all Docker containers

# docker-compose
alias dc='docker compose'
alias dcu='dc up -d'
alias dcd='dc down'
alias dcc='dc config'
alias dcr='dc restart'

# thefuck alias
eval $(thefuck --alias)
